#include <stdio.h>
#include <stdlib.h>
#define SIZE 6
void sort(int *b, int size);
int main(void) {
    int a[6] = {1,2,3,7,4,5};
    printf("normal order \n");
    for(int i = 0; i<6; ++i ){
        printf("%d", a[i]);

    }

    sort(&a, SIZE);

    printf("After convertion\n");
    for(int i = 0; i<6; ++i ){
        printf("%d", a[i]);

    }



    return 0;
}
void sort(int *b, int size) {

void change(int *element1,int *element2);
for(int i = 0; i<size-1; ++i ){
        for(int j = 0; j<size-1; ++j ){
        if(b[j+1]<b[j]){
            change(&b[j],&b[j+1]);
        }

    }

}
    }

    void change(int *element1, int *element2){
    int hold = *element1;
    *element1 = *element2;
    *element2=hold;
}

